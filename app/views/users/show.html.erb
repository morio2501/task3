	<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
	<%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: 'png',fallback: "no-image.png", size: "100x100" %>
	<p>name</p>
     <%= @user.name %>
     <p>intorodaction</p>
     <%= @user.introduction %>
     <%= link_to "編集", edit_user_path(@user.id)%>

<h1>New book</h1>
<%= form_for (@book) do|f| %>
<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>body</h4>
	<%= f.text_area :body %>
	<p><%= f.submit 'Create Book',class:"btn btn-primary col-xs-12" %></p>
	<% end %>
</div>

			<div class="col-xs-9">
			<h1>Bookes</h1>
				<table>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opnion</th>
					</tr>
					<% @books.each do |book| %>
					<tr>
						<td><%= link_to (book.user) do %>
							<%= attachment_image_tag book.user, :profile_image, :fill, 100,100, format: 'png',fallback: "no-image.png" %> 
						<% end %>
						</td>
						<td><%= link_to book.title,book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
			</table>
		</div>
	</div>
</div>