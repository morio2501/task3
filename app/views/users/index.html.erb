
<div class="continer">
	<div class="row">
		<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag current_user, :profile_image, :fill, 100,100, format: 'png',fallback: "no-image.png" %>
	<p>name</p>
     <%= current_user.name %>
     <p>intorodaction</p>
     <%= current_user.introduction %>
     <%= link_to "編集", edit_user_path(current_user.id) %>


<h1>New book</h1>
<%= form_for (@book) do|f| %>
<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Create Book' %>
	<% end %>
</div>

<div class="col-xs-9">
	<h1>Users</h1>
<table>
	<tr>
		<th>image</th>
		<th>name</th>
	</tr>
<% @users.each do |user|%>
<tr>
<td><%= attachment_image_tag user, :profile_image, format: 'png',fallback: "no-image.png",size: "50x50" %></td>

<td><%= user.name %></td>
<td><%= link_to 'Show', user_path(user.id)  %></td>
</tr>
<% end %>
</table>
</div>

</div>
</div>